<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PageStatusLayout">
        <attr name="layout_empty" format="reference"/>
        <attr name="layout_loading" format="reference"/>
        <attr name="layout_error" format="reference"/>
        <attr name="show_status" format="enum">
            <enum name="empty" value="0"/>
            <enum name="loading" value="1"/>
            <enum name="error" value="2"/>
            <enum name="success" value="3"/>
        </attr>
    </declare-styleable>
</resources>